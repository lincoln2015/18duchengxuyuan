<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="DefaultFontStyle">  
        <item name="android:textColor">#3d3a3a</item>
    </style>    
    
    
     <style name="BluFontStyle">  
        <item name="android:textColor">#0077d9</item>
    </style> 
    
    <style name="CommonBorderColor">  
          <item name="android:layout_height">1px</item>
          <item name="android:background">#b4b1b1</item>
    </style> 

     <style name="Theme_dialog" parent="@android:style/Theme.Dialog"> 
		<item name="android:windowFrame">@null</item><!-- 边框 --> 
		<item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 --> 
		<item name="android:windowIsTranslucent">false</item><!-- 半透明 --> 
		<item name="android:windowNoTitle">true</item><!-- 无标题 --> 
		<item name="android:windowBackground">@drawable/white_background</item><!-- 自己想要的背景 --> 
		<!--   <item name="android:backgroundDimEnabled">false</item>--><!-- 模糊 --> 
	
	</style> 
    
    <style name="Theme_add_favor_dialog" parent="@android:style/Theme.Dialog"> 
		<item name="android:windowFrame">@null</item><!-- 边框 --> 
		<item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 --> 
		<item name="android:windowIsTranslucent">false</item><!-- 半透明 --> 
		<item name="android:windowNoTitle">true</item><!-- 无标题 --> 
		<item name="android:windowBackground">@drawable/white_background</item><!-- 自己想要的背景 --> 
		<!--   <item name="android:backgroundDimEnabled">false</item>--><!-- 模糊 --> 
	
	</style> 
    
 

</resources>
