<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center|right"
    android:orientation="vertical"
    android:background="#e7e7e6" >

    
    <RelativeLayout
            android:id="@+id/toppanel"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#0077d9"
        android:gravity="right"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/back_ly"
                android:layout_width="29dp"
                android:layout_height="wrap_content"
                android:src="@drawable/menu" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/content_text"
                android:textColor="#f9f9f3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的收藏"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/delete_ly"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:orientation="vertical" >

            <TextView
                   android:textColor="#f9f9f3"
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>
 </RelativeLayout>
 
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#e7e7e6"
        android:gravity="center" >

        <ImageView
            android:id="@+id/add_favor_tag"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/add_favor" />

    </LinearLayout>

    <LinearLayout
        android:background="#e7e7e6"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ListView
            android:divider="@drawable/liner"
            android:dividerHeight="1px"
            android:id="@+id/favor_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </ListView>

    </LinearLayout>

</LinearLayout>