<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/account_email_setting_ly"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#ffffff" >

 <RelativeLayout
            android:id="@+id/toppanel"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0077d9"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/back_ly"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/content_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮件设置"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/submit_ly"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
              android:gravity="center|right"
            android:orientation="vertical" >

            <TextView
                   android:textColor="#ffffff"
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提交"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>
 </RelativeLayout>
 
 
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:background="#ffffff"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/user_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打开后邮件推送"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#b4b1b1" />

    <LinearLayout
        android:id="@+id/people_focus_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center|left"
            android:orientation="vertical" >

            <TextView
                 style="@style/DefaultFontStyle"
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当有人关注我"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical" >

            <CheckBox
                android:button="@null"
                android:background="@drawable/checkbox"
                android:id="@+id/people_focus_checkbox"
                android:layout_width="35dp"
                android:layout_height="35dp"
              />

        </LinearLayout>

    </LinearLayout>
    <View
            android:layout_width="match_parent"
             style="@style/CommonBorderColor"
   />
    
    
    <LinearLayout
           android:id="@+id/people_invite_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
              android:gravity="center|left"
            android:layout_weight="9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                 style="@style/DefaultFontStyle"
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有人邀请我回答问题"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical" >

            <CheckBox
                android:button="@null"
                android:background="@drawable/checkbox"
                android:id="@+id/people_invite_checkbox"
                android:layout_width="35dp"
                android:layout_height="35dp"
              />

        </LinearLayout>

    </LinearLayout>
   <View
            android:layout_width="match_parent"
             style="@style/CommonBorderColor"
   />
    
    <LinearLayout
           android:id="@+id/new_reply_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
              android:gravity="center|left"
            android:layout_weight="9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                 style="@style/DefaultFontStyle"
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我关注的问题有了新回复"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical" >

            <CheckBox
                android:button="@null"
                android:background="@drawable/checkbox"
                android:id="@+id/new_reply_checkbox"
                android:layout_width="35dp"
                android:layout_height="35dp"
              />

        </LinearLayout>

    </LinearLayout>
   <View
            android:layout_width="match_parent"
             style="@style/CommonBorderColor"
   />
        
    <LinearLayout
           android:id="@+id/new_personal_message_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
              android:gravity="center|left"
            android:layout_weight="9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                 style="@style/DefaultFontStyle"
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有人向我发送私信"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical" >

            <CheckBox
                android:button="@null"
                android:background="@drawable/checkbox"
                android:id="@+id/new_personal_message__checkbox"
                android:layout_width="35dp"
                android:layout_height="35dp"
              />

        </LinearLayout>

    </LinearLayout>
   <View
            android:layout_width="match_parent"
             style="@style/CommonBorderColor"
   />
        
    
    <LinearLayout
           android:id="@+id/question_edit_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
              android:gravity="center|left"
            android:layout_weight="9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                 style="@style/DefaultFontStyle"
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的问题被编辑"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical" >

            <CheckBox
                android:button="@null"
                android:background="@drawable/checkbox"
                android:id="@+id/question_edit_checkbox"
                android:layout_width="35dp"
                android:layout_height="35dp"
              />

        </LinearLayout>

    </LinearLayout>
    <View
            android:layout_width="match_parent"
             style="@style/CommonBorderColor"
   />
   

</LinearLayout>