<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notification_setting_ly"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="#e7e7e6">
    
<RelativeLayout
            android:id="@+id/toppanel"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0077d9"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/back_ly"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:textColor="#ffffff"
                android:id="@+id/content_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消息设置"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/submit_ly"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
             android:gravity="center|right"
            android:orientation="vertical" >

            <TextView
                  android:textColor="#ffffff"
                  android:textSize="15sp" 
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提交" />

        </LinearLayout>

    </LinearLayout>
 </RelativeLayout>
 

    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/user_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打开后消息推送"
            android:textSize="14sp" />

    </LinearLayout>
 <View
            android:layout_width="match_parent"
             style="@style/CommonBorderColor"
   />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ListView
            android:divider="@drawable/liner"
            android:dividerHeight="1px"
            android:id="@+id/notification_setting_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </ListView>

    </LinearLayout>

</LinearLayout>