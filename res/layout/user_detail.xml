<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#e7e7e6" >

     <RelativeLayout
            android:id="@+id/toppanel"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#0077d9"
      
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/back_ly"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:src="@drawable/menu" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:textColor="#ffffff"
                android:id="@+id/content_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的资料"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_ly"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                 android:textColor="#ffffff"
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>
 </RelativeLayout>
 
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:layout_weight="3"
      
        android:orientation="vertical" >

        <LinearLayout
         
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_weight="2"
         
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
            
                android:layout_weight="1"
                
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/user_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_launcher" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
               
                android:layout_weight="3"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                 
               		android:layout_weight="1"
                    
                    android:orientation="vertical" >

                    <TextView
                         style="@style/DefaultFontStyle"
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                 
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/topic_ly"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:textColor="#0077d9"
                                android:id="@+id/topic_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                 style="@style/DefaultFontStyle"
                                android:id="@+id/his_topic_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="话题" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/focus_ly"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                   android:textColor="#0077d9"
                                android:id="@+id/focus_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                 />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                 style="@style/DefaultFontStyle"
                                android:id="@+id/focus_count_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="关注的人" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/be_focuse_ly"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                   android:textColor="#0077d9"
                                android:id="@+id/focused_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                               />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                 style="@style/DefaultFontStyle"
                                android:id="@+id/focused_count_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="粉丝" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e7e7e6" />

        <LinearLayout
             
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
               android:layout_weight="1"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
             
                android:orientation="horizontal" >

                <TextView
                    style="@style/BluFontStyle"
                    android:id="@+id/agree_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"  
                android:orientation="horizontal" >
                <TextView
                    style="@style/BluFontStyle"
                    android:id="@+id/thanks_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="6"
               
                android:gravity="right"
                android:orientation="horizontal" >

                

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    

    
     <View
            android:layout_width="match_parent"
             style="@style/CommonBorderColor"
   />
    

    <LinearLayout
    
         android:id="@+id/detail_layout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
    
        android:orientation="horizontal" >

        <TextView
             style="@style/DefaultFontStyle"
            android:id="@+id/detail_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:text="详细信息" />

        <TextView
             style="@style/DefaultFontStyle"
            android:id="@+id/detai_page_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=">"
            android:textSize="20sp" />

    </LinearLayout>
    
    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#b4b1b1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:layout_weight="3"
     
        android:orientation="vertical" >

        <LinearLayout
           
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
       
             android:id="@+id/user_actions_layout_btn"
            android:orientation="horizontal" >

            <TextView
                 style="@style/DefaultFontStyle"
                android:id="@+id/all_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_weight="9"
                android:text="全部动态" />

            <TextView
                 style="@style/DefaultFontStyle"
                android:id="@+id/all_action_page_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=">"
                android:textSize="20sp" />

        </LinearLayout>
        
        <View
            android:layout_width="match_parent"
             style="@style/CommonBorderColor"
   		/>

        <LinearLayout
          
            android:id="@+id/questions_answered_layout_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
         
            android:orientation="horizontal" >

            <TextView
                 style="@style/DefaultFontStyle"
                android:id="@+id/answered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                   android:layout_weight="8"
                android:text="答过" />

            <TextView
                 style="@style/DefaultFontStyle"
                android:id="@+id/answered_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                   android:layout_weight="1"
                />

            <TextView
                 style="@style/DefaultFontStyle"
                android:id="@+id/answered_page_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=">"
                android:textSize="20sp" />

        </LinearLayout>
         <View
            android:layout_width="match_parent"
             style="@style/CommonBorderColor"
   		  />

        <LinearLayout
           
            android:id="@id/questioned_layout_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
        
            android:orientation="horizontal" >

            <TextView
                style="@style/DefaultFontStyle"
                android:id="@+id/questioned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="问过" />

            <TextView
                 style="@style/DefaultFontStyle"
                android:id="@+id/questioned_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                 />

            <TextView
                 style="@style/DefaultFontStyle"
                android:id="@+id/questioned_page_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=">"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>
 	<View
            android:layout_width="match_parent"
             style="@style/CommonBorderColor"
    />

    <LinearLayout
      
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:layout_weight="3"
      
        android:orientation="vertical" >

        

    </LinearLayout>
    
     <View
            android:layout_width="match_parent"
             style="@style/CommonBorderColor"
   	 />

</LinearLayout>