<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/category_show_ly"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#e7e7e6" >

 <RelativeLayout
            android:id="@+id/toppanel"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >
    <LinearLayout
         android:background="#0077d9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/back_ly"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center|left"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
             
                android:textColor="#ffffff"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>
  
 </RelativeLayout>

    <LinearLayout
        android:id="@+id/addtime_order_ly"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="#ffffff"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center|left"
            android:orientation="vertical" >

            <TextView
                  style="@style/DefaultFontStyle" 
                android:id="@+id/all_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部问题   按发布时间排序" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next" />

        </LinearLayout>

    </LinearLayout>
    
     <View
            android:layout_width="match_parent"
             style="@style/CommonBorderColor"
   />

    <LinearLayout
        android:id="@+id/answercount_order_ly"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="#ffffff" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:background="#ffffff"
            android:gravity="center|left"
            android:orientation="vertical" >

            <TextView
                  style="@style/DefaultFontStyle" 
                android:id="@+id/best_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部问题   按回答数量排序" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/invite_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next" />

        </LinearLayout>

    </LinearLayout>
    
     <View
            android:layout_width="match_parent"
             style="@style/CommonBorderColor"
     />

    <LinearLayout
        android:id="@+id/agreecount_order_ly"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="#ffffff" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center|left"
            android:orientation="vertical" >

            <TextView
                  style="@style/DefaultFontStyle" 
                android:id="@+id/best_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部问题   按赞同数量排序" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next" />
        </LinearLayout>
    </LinearLayout>

     <View
            android:layout_width="match_parent"
             style="@style/CommonBorderColor"
   />
    
    <LinearLayout
        android:id="@+id/viewcount_order_ly"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="#ffffff" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center|left"
            android:orientation="vertical" >

            <TextView
                  style="@style/DefaultFontStyle" 
                android:id="@+id/parent_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部问题   按浏览数量排序" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next" />

        </LinearLayout>

    </LinearLayout>
    
    <View
            android:layout_width="match_parent"
             style="@style/CommonBorderColor"
   />
    
    <LinearLayout
        android:id="@+id/fanscount_order_ly"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="#ffffff" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center|left"
            android:orientation="vertical" >

            <TextView
               style="@style/DefaultFontStyle" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部问题   按关注数量排序" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
          
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next" />

        </LinearLayout>

    </LinearLayout>
    
     <View
            android:layout_width="match_parent"
             style="@style/CommonBorderColor"
      />

</LinearLayout>